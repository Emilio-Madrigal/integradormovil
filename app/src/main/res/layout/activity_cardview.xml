<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >
    <include
        android:id="@+id/toolbarCard"
        layout="@layout/toolbar">

    </include>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="25dp"
        app:cardCornerRadius="20dp">
        <ImageView

            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:alpha=".30"

            >

        </ImageView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="9dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/nombrec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Nombre"
                    android:textColorHint="@color/black">

                </TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/apellidoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="apellido"
                    android:textColorHint="@color/black">

                </TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/genc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:entries="@array/genero">
                </Spinner>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/edadc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="edad"
                    android:textColorHint="@color/black">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:inputType="numberDecimal"
                    android:id="@+id/pesoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Peso (kg)"
                    android:textColorHint="@color/black"
                    >

                </EditText>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:inputType="number"
                    android:id="@+id/alturac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="altura(cm)"
                    android:textColorHint="@color/black">
                </TextView>

            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/telefonoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="telefono"
                    android:textColorHint="@color/black">

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/actc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:entries="@array/actividad">
                </Spinner>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:focusable="false"
                    android:id="@+id/citahorac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="hora de cita"
                    android:textColorHint="@color/black">

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:focusable="false"
                    android:id="@+id/citafechac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="fecha de cita"
                    android:textColorHint="@color/black">
                </TextView>

            </LinearLayout>
            <Button
                android:id="@+id/llamarc"
                android:alpha=".80"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="llamar"
                android:textColor="@color/black"

                >

            </Button>

        </LinearLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>
