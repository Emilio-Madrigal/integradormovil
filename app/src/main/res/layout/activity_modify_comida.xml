<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar">

    </include>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="380dp"
        app:cardElevation="25dp"
        app:cardCornerRadius="20dp">
        <ImageView
            android:src="@drawable/fondo"
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:alpha=".30"

            >

        </ImageView>

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <TextView
               android:id="@+id/textView_nombre_alimento"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Nombre del alimento:"
               android:textSize="16sp"
               android:layout_marginBottom="8dp" />

           <EditText
               android:id="@+id/nombre"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Ej: Manzana"
               android:inputType="textCapWords"
               android:padding="8dp"
               android:background="@android:drawable/edit_text"
               android:layout_marginBottom="16dp" />


           <TextView
               android:id="@+id/textView_calorias"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="CalorÃ­as:"
               android:textSize="16sp"
               android:layout_marginBottom="8dp" />

           <EditText
               android:id="@+id/calorias"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Ej: 52"
               android:inputType="number"
               android:padding="8dp"
               android:background="@android:drawable/edit_text"
               android:layout_marginBottom="16dp" />
       </LinearLayout>

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/Anterior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anterior"
            android:backgroundTint="@color/SigAnt">
        </Button>
        <Button
            android:id="@+id/Modificar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modificar"
            android:backgroundTint="@color/modificar">
        </Button>
        <Button
            android:id="@+id/Siguiente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Siguiente"
            android:backgroundTint="@color/SigAnt"
            >
        </Button>
    </LinearLayout>

</LinearLayout>
